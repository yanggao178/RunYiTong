<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开方"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- 症状描述部分已移除 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_title"
        android:layout_above="@id/ll_symptoms_input"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="#F5F5F5"
        android:padding="8dp">
        
        <TextView
            android:id="@+id/tv_analysis_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入症状描述，点击上传按钮或按回车键进行AI分析"
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp"
            android:padding="12dp" />
            
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_symptoms_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="@color/primary_color"
        android:padding="12dp">

        <EditText
            android:id="@+id/et_symptoms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入你的症状"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@null"
            android:inputType="textMultiLine"
            android:minHeight="48dp" />

        <ImageButton
            android:id="@+id/btn_select_image_source"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_image"
            android:background="@android:color/holo_blue_light"
            android:contentDescription="选择图片来源" />

        <ImageButton
            android:id="@+id/btn_upload_prescription"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_upload"
            android:background="@android:color/holo_red_light"
            android:contentDescription="上传处方图片" />
    </LinearLayout>

</RelativeLayout>